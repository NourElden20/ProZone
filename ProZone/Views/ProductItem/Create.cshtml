@model ProZone.Models.VMs.ProductItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" readonly />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OptionValue" class="control-label"></label>
                <input asp-for="OptionValue" class="form-control" />
                <span asp-validation-for="OptionValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity" class="control-label"></label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Photo" class="form-label "></label>
                <input type="file" class="form-control" asp-for="Photo" />
                <span asp-validation-for="Photo" class="text-danger d-block"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6 d-flex flex-column mx-5 pt-4 overflow-hidden">
        <img class="cover-preview d-none" alt="Cover" style="width: 350px;" />
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="ProductItem" asp-route-productId ="@Model.ProductId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/game-form.js" asp-append-version="true"></script>

}
