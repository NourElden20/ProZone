@model IEnumerable<ProZone.Models.Product>

@{
    ViewData["Title"] = "Products";
    var imagePath = ViewBag.path;
}

<h1 class="mt-4">Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoldTimes)
            </th>
            <th>
                Variants Count
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Name.en)
                </td>
                <td style="vertical-align: middle;">
                    <img src="@Url.Content($"~/Images/{item.Photo}")"
                         alt="Product Image"
                         style="max-width: 75px; max-height: 75px; object-fit: contain; border-radius: 25%" />
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.MinPrice)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.SoldTimes)
                </td>
                <td style="vertical-align: middle;">
                    @ViewBag.count
                </td>
                <td style="vertical-align: middle;">
                    @Html.ActionLink("Varients", "Index", "ProductItem", new { productId = item.Id }) |
                    @Html.ActionLink("AddVarient", "Create", "ProductItem", new { productId = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
